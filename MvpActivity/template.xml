<?xml version="1.0"?>
<template format="4"
		revision="1"
		name="Mvp Activity"
		description="Activity template for MVP feature">
 
	<category value="Other"/>

	<parameter
        id="featureName"
        name="Feature Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Feature"
        help="The name of feature" />

    <parameter
        id="layoutName"
        name="Layout Name"
        type="string"
        constraints="layout|unique|nonempty"
        suggest="${activityToLayout(featureName)}"
        default="activity_feature"
        help="The name of the layout to create for the feature" />

    <parameter
        id="packName"
        name="Package Name"
        type="string"
        constraints="nonempty|unique"
        default="blank"
        visibility="false"
        suggest="${classToResource(featureName)}"
        help="The name of the package to create" />
 
	<globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
 
</template>